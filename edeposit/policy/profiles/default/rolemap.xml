<?xml version="1.0"?>
<rolemap>
  <roles>
    <role name="Publisher"/>
    <role name="Reader"/>
    <role name="Reviewer"/>
    <role name="Site Administrator"/>
  </roles>
  <permissions>
    <permission name="Request review" acquire="True">
      <role name="Editor"/>
      <role name="Manager"/>
      <role name="Owner"/>
      <role name="Publisher"/>
      <role name="Site Administrator"/>
    </permission>
    <permission name="Modify portal content" acquire="True">
      <role name="Editor"/>
      <role name="Publisher"/>
      <role name="Manager"/>
      <role name="Owner"/>
      <role name="Site Administrator"/>
    </permission>
    <permission name="Add portal content" acquire="True">
      <role name="Editor"/>
      <role name="Publisher"/>
      <role name="Manager"/>
      <role name="Owner"/>
      <role name="Site Administrator"/>
    </permission>
    <permission name="Review portal content" acquire="True">
      <role name="Manager"/>
      <role name="Reviewer"/>
      <role name="Publisher"/>
      <role name="Site Administrator"/>
    </permission>
    <permission name="View" acquire="True">
      <role name="Contributor"/>
      <role name="Editor"/>
      <role name="Manager"/>
      <role name="Owner"/>
      <role name="Publisher"/>
      <role name="Reader"/>
      <role name="Site Administrator"/>
    </permission>
    <permission name="View Groups" acquire="True">
      <role name="Manager"/>
      <role name="Member"/>
      <role name="Owner"/>
      <role name="Site Administrator"/>
    </permission>
    <permission name="E-Deposit: Add EBook" acquire="True">
      <role name="Manager"/>
      <role name="Owner"/>
      <role name="Publisher"/>
    </permission>
    <permission name="E-Deposit: Add EBook Folder" acquire="True">
      <role name="Manager"/>
      <role name="Owner"/>
      <role name="Publisher"/>
    </permission>
  </permissions>
</rolemap>
