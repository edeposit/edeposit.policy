<?xml version="1.0"?>
<dc-workflow workflow_id="edeposit_manual_aquisition_workflow" title="Simple Publication Workflow" description="Simple workflow that is useful for basic web sites. - Things start out as private, and can either be submitted for review, or published directly. - The creator of a content item can edit the item even after it is published." state_variable="review_state" initial_state="filling" manager_bypass="False">
 <permission>Access contents information</permission>
 <permission>Change portal events</permission>
 <permission>Modify portal content</permission>
 <permission>View</permission>
 <state state_id="checking_ISBN" title="ISBN is validated">
  <exit-transition transition_id="ISBN_is_OK"/>
  <exit-transition transition_id="ISBN_is_not_OK"/>
  <exit-transition transition_id="check_ISBN_validation_result"/>
  <permission-map name="Access contents information" acquired="True">
   <permission-role>Publisher</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="Change portal events" acquired="True">
   <permission-role>Publisher</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="Modify portal content" acquired="True">
   <permission-role>Publisher</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="View" acquired="True">
   <permission-role>Publisher</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
 </state>
 <state state_id="checking_completness" title="">
  <exit-transition transition_id="check_completness_validation_result"/>
  <exit-transition transition_id="completness_is_OK"/>
  <exit-transition transition_id="completness_is_not_OK"/>
 </state>
 <state state_id="checking_file_format" title="">
  <exit-transition transition_id="check_file_format_validation_result"/>
  <exit-transition transition_id="file_format_is_OK"/>
  <exit-transition transition_id="file_format_is_not_OK"/>
 </state>
 <state state_id="filling" title="Filling important properties of an ebook">
  <description>It is necessary to upload file and fill each mandatory property.</description>
  <exit-transition transition_id="submit"/>
  <permission-map name="Access contents information" acquired="True">
   <permission-role>Publisher</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="Change portal events" acquired="True">
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="Modify portal content" acquired="True">
   <permission-role>Publisher</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
  <permission-map name="View" acquired="True">
   <permission-role>Publisher</permission-role>
   <permission-role>Site Administrator</permission-role>
  </permission-map>
 </state>
 <state state_id="licence_agreement" title="Licence agreement">
  <exit-transition transition_id="submit_licence_agreement"/>
 </state>
 <state state_id="saved" title="">
 </state>
 <transition transition_id="ISBN_is_OK" title="" new_state="checking_file_format" trigger="USER" before_script="" after_script="">
  <action url="" category="workflow" icon="">ISBN is OK</action>
  <guard>
   <guard-permission>Review portal content</guard-permission>
  </guard>
 </transition>
 <transition transition_id="ISBN_is_not_OK" title="ISBN is not OK" new_state="filling" trigger="USER" before_script="" after_script="">
  <action url="" category="workflow" icon="">ISBN is not OK</action>
  <guard>
   <guard-permission>Request review</guard-permission>
  </guard>
 </transition>
 <transition transition_id="check_ISBN_validation_result" title="Check state of ISBN validation" new_state="" trigger="USER" before_script="" after_script="">
  <description>Check whether ISBN is already validated.</description>
  <action url="" category="workflow" icon="">Check</action>
  <guard>
   <guard-permission>Request review</guard-permission>
  </guard>
 </transition>
 <transition transition_id="check_completness_validation_result" title="Check state of completness validation" new_state="" trigger="USER" before_script="" after_script="">
  <description>Check whether a validation of completness already finished.</description>
  <action url="" category="workflow" icon="">Check</action>
  <guard>
   <guard-permission>Request review</guard-permission>
  </guard>
 </transition>
 <transition transition_id="check_file_format_validation_result" title="Check state of file format validation" new_state="" trigger="USER" before_script="" after_script="">
  <description>Check whether a validation of file format already finished.</description>
  
  <guard>
   <guard-permission>Request review</guard-permission>
  </guard>
 </transition>
 <transition transition_id="completness_is_OK" title="completness is OK" new_state="licence_agreement" trigger="USER" before_script="" after_script="">
  <action url="" category="workflow" icon="">completness is OK</action>
  <guard>
   <guard-permission>Request review</guard-permission>
  </guard>
 </transition>
 <transition transition_id="completness_is_not_OK" title="completness is not OK" new_state="filling" trigger="USER" before_script="" after_script="">
  <action url="" category="workflow" icon="">completness is not OK</action>
  <guard>
   <guard-permission>Request review</guard-permission>
  </guard>
 </transition>
 <transition transition_id="file_format_is_OK" title="File format is OK" new_state="checking_completness" trigger="USER" before_script="" after_script="">
  <action url="" category="workflow" icon="">File format is OK</action>
  <guard>
   <guard-permission>Request review</guard-permission>
  </guard>
 </transition>
 <transition transition_id="file_format_is_not_OK" title="File format is not OK" new_state="filling" trigger="USER" before_script="" after_script="">
  <action url="" category="workflow" icon="">File format is not OK</action>
  <guard>
   <guard-permission>Request review</guard-permission>
  </guard>
 </transition>
 <transition transition_id="submit" title="Publisher can submit all properties are filled" new_state="checking_ISBN" trigger="USER" before_script="" after_script="">
  <description>Puts your ebook into a checking queue. So it will be checked ISBN, file format and other parts.
</description>
  <action url="%(content_url)s/content_status_modify?workflow_action=submit" category="workflow" icon="">Submit for checking</action>
  <guard>
   <guard-permission>Request review</guard-permission>
  </guard>
 </transition>
 <transition transition_id="submit_licence_agreement" title="Submit licence agreement" new_state="saved" trigger="USER" before_script="" after_script="">
  <action url="" category="workflow" icon="">Submit licence agreement</action>
  <guard>
   <guard-permission>Request review</guard-permission>
  </guard>
 </transition>
 <worklist worklist_id="reviewer_queue" title="">
  <description>Reviewer tasks</description>
  <action url="%(portal_url)s/search?review_state=pending" category="global" icon="">Pending (%(count)d)</action>
  <guard>
   <guard-permission>Review portal content</guard-permission>
  </guard>
  <match name="review_state" values="pending"/>
 </worklist>
 <variable variable_id="action" for_catalog="False" for_status="True" update_always="True">
  <description>Previous transition</description>
  <default>
   
   <expression>transition/getId|nothing</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="actor" for_catalog="False" for_status="True" update_always="True">
  <description>The ID of the user who performed the previous transition</description>
  <default>
   
   <expression>user/getId</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="comments" for_catalog="False" for_status="True" update_always="True">
  <description>Comment about the last transition</description>
  <default>
   
   <expression>python:state_change.kwargs.get('comment', '')</expression>
  </default>
  <guard>
  </guard>
 </variable>
 <variable variable_id="review_history" for_catalog="False" for_status="False" update_always="False">
  <description>Provides access to workflow history</description>
  <default>
   
   <expression>state_change/getHistory</expression>
  </default>
  <guard>
   <guard-permission>Request review</guard-permission>
   <guard-permission>Review portal content</guard-permission>
  </guard>
 </variable>
 <variable variable_id="time" for_catalog="False" for_status="True" update_always="True">
  <description>When the previous transition was performed</description>
  <default>
   
   <expression>state_change/getDateTime</expression>
  </default>
  <guard>
  </guard>
 </variable>
</dc-workflow>
