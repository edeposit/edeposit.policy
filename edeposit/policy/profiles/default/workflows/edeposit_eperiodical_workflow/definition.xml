 <transition transition_id="approveAndToCatalogization" 
             title="Approve and to Catalogization" 
             new_state="catalogization" 
             trigger="USER" before_script="" after_script="">
  <description>ISSN is OK and Acquision is OK. So it can go to catalogization.</description>
  <action url="%(content_url)s/content_status_modify?workflow_action=approveToCatalogization" category="workflow" icon="">Approve</action>
  <guard>
   <guard-role>E-Deposit: Assigned Acquisitor, E-Deposit: ISBN Agency Administrator</guard-role>
  </guard>
 </transition>
